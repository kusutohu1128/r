# OAuth callback routing
RewriteEngine On

# Exclude .well-known directory from all rewrites (for App Links verification)
RewriteRule ^\.well-known/ - [L]

# Redirect /auth/callback to /auth/callback/index.html
RewriteRule ^auth/callback/?$ /auth/callback/index.html [L,R=301]

# Alternative routing for different OAuth providers
RewriteRule ^oauth/google/?$ /auth/callback/index.html [L,R=301]
